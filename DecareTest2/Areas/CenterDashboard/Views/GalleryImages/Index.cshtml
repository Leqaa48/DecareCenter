@model IEnumerable<DecareCenter.Models.GalleryImage>

@{
    ViewData["Title"] = "Index";
}

<h1>Gallery</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <img src="@item.Image" alt="img" class="img-fluid" style="width:100px;height:100px" />
            </td>
            
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.GalleryImageId">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.GalleryImageId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.GalleryImageId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
