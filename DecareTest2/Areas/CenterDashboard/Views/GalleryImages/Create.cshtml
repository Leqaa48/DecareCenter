@model DecareCenter.Models.GalleryImage

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Gallery Image</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ImageFile" class="font-weight-bold "></label>
                <input asp-for="ImageFile" class="form-control form-control-lg" type="file" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group" style="visibility:hidden;">
                <label asp-for="CenterId" class="control-label"></label>
                <select asp-for="CenterId" class ="form-control" asp-items="ViewBag.CenterId"></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark" >Back to List</a>
</div>

