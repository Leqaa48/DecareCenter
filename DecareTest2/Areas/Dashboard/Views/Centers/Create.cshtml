            </div>
            <div class="form-group" style="height:200px; margin-bottom:40px">
                <label asp-for="BriefDescription" class="control-label"></label>
                <textarea asp-for="BriefDescription" class="form-control"></textarea>
                <span asp-validation-for="BriefDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkDaysStart" class="control-label"></label>
                <input asp-for="WorkDaysStart" class="form-control"/>
                <span asp-validation-for="WorkDaysStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkDaysEnd" class="control-label"></label>
                <input asp-for="WorkDaysEnd" class="form-control" />
                <span asp-validation-for="WorkDaysEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkHours" class="control-label"></label>
                <input asp-for="WorkHours" class="form-control" />
                <span asp-validation-for="WorkHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CenterAddress" class="control-label"></label>
                <input asp-for="CenterAddress" class="form-control" />
                <span asp-validation-for="CenterAddress" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="CenterPhoneNumber" class="control-label"></label>
                <input asp-for="CenterPhoneNumber" class="form-control" />
                <span asp-validation-for="CenterPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CenterSecondPhoneNumber" class="control-label"></label>
                <input asp-for="CenterSecondPhoneNumber" class="form-control" />
                <span asp-validation-for="CenterSecondPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CenterEmail" class="control-label"></label>
                <input asp-for="CenterEmail" class="form-control" />
                <span asp-validation-for="CenterEmail" class="text-danger"></span>
            </div>
