@model IEnumerable<Doctor>

<section class="team-area2 fix p-relative pt-105 pb-80">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 p-relative">
                <div class="section-title center-align mb-50 text-center wow fadeInDown animated" data-animation="fadeInDown" data-delay=".4s">
                    <h5>Our Doctor</h5>
                    <h2>
                        Best Expert Dentist
                    </h2>

                </div>
            </div>

        </div>
        <div class="row team-active">
            @foreach(var item in Model)
            {
                <div class="col-xl-4">
                    <div class="single-team mb-40">
                        <div class="team-thumb">
                            <div class="brd">
                                <img src="@item.DoctorImage" alt="img">
                            </div>
                        </div>
                        <div class="team-info">
                            <h5><a asp-action="DoctorDetails" asp-controller="Doctor" asp-route-id="@item.DoctorId">@item.Name</a></h5>
                            <p>@item.Specialist</p>
                            <div class="team-social">
                                <ul>
                                    <li><a href="@item.FacebookUrl"><i class="fab fa-facebook-f"></i></a></li>
                                    <li><a href="@item.FacebookUrl"><i class="fab fa-instagram"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            
        </div>
    </div>
</section>