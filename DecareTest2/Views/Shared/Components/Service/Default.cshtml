@model IEnumerable<Service>

<section id="service-details2" class="service-details-two pt-30 pb-85 p-relative">
    <div class="col-lg-12">
        <div class="section-title center-align mb-50 text-center">
            <h5>Our Services</h5>
            <h2>
                What We Provide
            </h2>
        </div>
    </div>
    <div class="container">
        <div class="row align-items-center">
            @foreach(var item in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-15">
                    <div class="about-content s-about-content">
                        <ul class="sr-tw-ul">
                            <li style="height: 120px">
                                <div class="icon"><img src="@item.Image" alt="icon01"></div>
                                <div class="text">
                                    <a asp-action="ServiceDetails" asp-controller="Service" asp-route-id="@item.ServiceId"> <h4>@item.ServiceName</h4></a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            }
           
        </div>
    </div>
</section>