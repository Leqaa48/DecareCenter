@model Center

<footer class="footer-bg footer-p pt-90" style="background: #00173c;">
    <div class="footer-top pb-70">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-xl-4 col-lg-4 col-sm-6">
                    <div class="footer-widget mb-30">
                        <div class="f-widget-title">
                            <h2><img src="~/main/decare/img/logo/f_logo.png" alt="logo"></h2>
                        </div>
                        <div class="footer-link">
                            <p>@Model.BriefDescription</p>
                            <div class="f-contact">
                                <ul>
                                    <li>
                                        <i class="icon fal fa-clock"></i>
                                        <span>@Model.WorkDaysStart - @Model.WorkDaysEnd :<br>@Model.WorkHours</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-2 col-lg-2 col-sm-6">
                    <div class="footer-widget mb-30">
                        <div class="f-widget-title">
                            <h2>Other Links</h2>
                        </div>
                        <div class="footer-link">
                            <ul>
                                <li><a asp-action="Index" asp-controller="Center"> Home</a></li>
                                <li><a asp-action="Index" asp-controller="AboutUs">About Us</a></li>
                                <li><a asp-action="Index" asp-controller="Service">Services</a></li>
                                <li><a asp-action="Index" asp-controller="GalleryImage"> Gallery</a></li>
                                <li><a asp-action="Index" asp-controller="Doctor">Our Team</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-xl-2 col-lg-2 col-sm-6">
                    <div class="footer-widget mb-30">
                        <div class="f-widget-title">
                            <h2>Our Services</h2>
                        </div>
                        <div class="footer-link">
                            <ul>
                                @foreach (var item in ViewBag.getServices)
                                {
                                    <li><a asp-action="ServiceDetails" asp-controller="Service" asp-route-id="@item.ServiceId">@item.ServiceName</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-3 col-sm-6">
                    <div class="footer-widget mb-30">
                        <div class="f-widget-title">
                            <h2>Contact Us</h2>
                        </div>
                        <div class="f-contact">
                            <ul>
                                <li>
                                    <i class="icon fal fa-map-marker-check"></i>
                                    <span>@Model.Place</span>
                                </li>
                                <li>
                                    <i class="icon fal fa-phone"></i>
                                    <span>@Model.CenterPhoneNumber<br>@Model.CenterSecondPhoneNumber</span>
                                </li>
                                <li>
                                    <i class="icon fal fa-envelope"></i>
                                    <span>
                                        <a href="mailto:leqaa.abujubbeh97@gmail.com">@Model.CenterEmail</a>
                                    </span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="copyright-wrap">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-4">
                    <div class="copy-text">
                        Copyright &copy; 2022 decare. All rights reserved.
                    </div>
                </div>
                <div class="col-lg-4">
                </div>
                <div class="col-lg-4">
                    <div class="footer-social">
                        <a href="@Model.FacebookUrl"><i class="fab fa-facebook-f"></i></a>
                        <a href="@Model.InstagramUrl"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>