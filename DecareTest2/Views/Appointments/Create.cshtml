@model DecareCenter.Models.Appointment

@{
    ViewData["Title"] = "Create";
}

@if (TempData["AlertMessage"] != null){
    <div class="alert alert-success" role="alert">
        @TempData["AlertMessage"] 
        
    </div>
}
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
                <h3 class="mb-4">Make An Appointment To Visit Our Doctor</h3>
                <div class="bg-light rounded d-flex align-items-center p-5 mb-4">
                    <div class="d-flex flex-shrink-0 align-items-center justify-content-center rounded-circle bg-white" style="width: 55px; height: 55px;">
                        <i class="fa fa-phone-alt text-primary"></i>
                    </div>
                    <div class="ms-4">
                        <p class="mb-2">Call Us Now</p>
                        <h5 class="mb-0">@ViewBag.getCenter.CenterPhoneNumber</h5>
                    </div>
                </div>
                <div class="bg-light rounded d-flex align-items-center p-5">
                    <div class="d-flex flex-shrink-0 align-items-center justify-content-center rounded-circle bg-white" style="width: 55px; height: 55px;">
                        <i class="fa fa-envelope-open text-primary"></i>
                    </div>
                    <div class="ms-4">
                        <p class="mb-2">Mail Us Now</p>
                        <h5 class="mb-0"><a href="mailto:@ViewBag.getCenter.CenterEmail">Send An Email</a></h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 wow fadeInUp" data-wow-delay="0.5s">
                <div class="bg-light rounded h-100 d-flex align-items-center p-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <select asp-for="CenterId" class="form-select border-0" style="height: 55px; visibility: hidden" asp-items="ViewBag.getCenterId"></select>
                        <div class="row g-3">
                            <div class="col-12 col-sm-6">
                                <input asp-for="FirstName" class="form-control border-0" placeholder="First Name" style="height: 55px;">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-12 col-sm-6">
                                <input asp-for="LastName" class="form-control border-0" placeholder="Last Name" style="height: 55px;">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <input asp-for="PhoneNumber" class="form-control border-0" placeholder="Your Mobile" style="height: 55px;">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="col-12 col-sm-6">
                                <select asp-for="Doctor" class="form-select border-0" style="height: 55px;" asp-items="ViewBag.getDoctors"></select>
                                <span asp-validation-for="Doctor" class="text-danger"></span>
                            </div>
                            <div class="col-12 col-sm-6">
                                <select asp-for="Service" class="form-select border-0" style="height: 55px;" asp-items="ViewBag.getServices"></select>
                                <span asp-validation-for="Service" class="text-danger"></span>
                            </div>
                            <div class="col-12 col-sm-6">
                                <input asp-for="Date" class="form-control border-0 datetimepicker-input" placeholder="Choose Date" id="datePicker" style="height: 55px;">
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                            <div class="col-12 col-sm-6">
                                <input asp-for="Time" class="form-control border-0 datetimepicker-input" placeholder="Choose Time" id="timePicker" style="height: 55px;">
                                <span asp-validation-for="Time" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <textarea asp-for="Comment" class="form-control border-0" rows="5" placeholder="Describe your problem"></textarea>
                                <span asp-validation-for="Comment" class="text-danger" > </span>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Book Appointment</button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

